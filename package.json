  "dependencies": {
    "chalk": "^4.1.0",
    "commander": "^6.1.0",
    "configent": "^2.2.0",
    "fs-extra": "^9.0.1",
    "node-html-parser": "^1.2.21",
    "ora": "^5.1.0",
    "rollup": "^2.28.0",
    "tossr": "^1.4.1"
  },
  "devDependencies": {
    "ava": "^3.12.1"
  },
  "ava": {
    "files": [
      "test/specs/**",
      "test/**/*.spec.*"
    ],
    "ignoredByWatcher": [
      "**/output",
      "**/spank-summary.json"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "quoteProps": "as-needed",
    "trailingComma": "all",
    "bracketSpacing": true,
    "arrowParens": "avoid",
    "semi": false,
    "useTabs": false,
    "tabWidth": 4,
    "printWidth": 90,
    "svelteSortOrder": "options-scripts-markup-styles",
    "svelteAllowShorthand": true,
    "svelteBracketNewLine": false,
    "svelteIndentScriptAndStyle": true
  }
